- name: set all hdfs nodes
  hosts: HDFS-NN
  user: root
  gather_facts: yes
  tasks:
    - include_role:
        name: hdfs-namenode
      vars:
        group: HDFS-NN
        datanode_group: HDFS-DN
        hadoop_pkg: 'http://mirrors.ustc.edu.cn/apache/hadoop/core/hadoop-3.3.0/hadoop-3.3.0.tar.gz'
