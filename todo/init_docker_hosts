- name: init docker nodes
  hosts: all
  user: root
  gather_facts: yes
  tasks:
    - include_role:
        name: docker
      vars:
        group: all
        enable_metrics: true
        repo: 'http://mirrors.tuna.tsinghua.edu.cn/docker-ce/linux/centos/docker-ce.repo' 
        version: '19.03.9'
        registry:
          - myhub.com
